<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context="pandomime.dr.tsoglanakos.myapplication.MainActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="245dp"

    android:id="@+id/linearLayout"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/button_paroimies"
        android:background="@color/DarkOliveGreen"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Παροιμίες"
        android:layout_marginLeft="15dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/button_movies"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />
    <TextView
        android:id="@+id/button_diafimiseis"
        android:background="@color/BeeYellow"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Διαφημίσεις"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/button_series"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

    <TextView
        android:id="@+id/button_movies"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textIsSelectable="false"
        android:background="@color/costumGreen"
        android:text="Ταινίες"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textStyle="bold|italic"
        android:layout_above="@+id/button_mix"
        android:layout_alignLeft="@+id/button_paroimies"
        android:layout_alignStart="@+id/button_paroimies" />
    <TextView
        android:id="@+id/button_series"
        android:textSize="25dp"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Σειρές"
        android:layout_marginBottom="10dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textIsSelectable="false"
        android:background="@color/costum_orange2"
        android:layout_above="@+id/button_softcore"
        android:layout_alignLeft="@+id/button_diafimiseis"
        android:layout_alignStart="@+id/button_diafimiseis" />



    <TextView
        android:id="@+id/button_mix"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:text="Συνδιασμός"
        android:background="@color/costum_green"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_movies"
        android:layout_alignStart="@+id/button_movies" />
    <TextView
        android:id="@+id/button_softcore"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:text="Αισθησιακές Ταινίες"
        android:background="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_series"
        android:layout_alignStart="@+id/button_series" />

</RelativeLayout>
    <Button
        android:id="@+id/pref"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pref"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="pref_function"
        />
</RelativeLayout>
